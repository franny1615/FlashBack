<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeckClasses.DeckScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/deck_screen_deckname_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/deckstitle"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deckScreenDeleteDeckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_input_delete"
            android:contentDescription="@string/sample_deck_name" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deckScreenEditDeckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:contentDescription="@string/sample_deck_name"
            android:onClick="editDeckName"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deckScreenAddCardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_input_add"
            android:contentDescription="@string/sample_deck_name"
            android:onClick="onAddCardToDeck"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deckScreenDeleteCardsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_input_delete"
            android:contentDescription="@string/sample_deck_name" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deckScreenMoveCardsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_source"
            android:contentDescription="@string/sample_deck_name"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/deck_screen_recyclerview"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
</LinearLayout>