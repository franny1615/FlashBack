<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flashback">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlashBack">

        <!-- Tester Only - Delete FrontCardView and BoilerPlate Activities -->
        <activity android:name=".EditCard.EditFlashCardActivity"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".EditCard.EditFlashCardFrontActivity"
            android:parentActivityName=".EditCard.EditFlashCardActivity">
        </activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>